<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/ed_verify_number1"
        style="@style/Verify_Code_Appearance"
        app:layout_constraintEnd_toStartOf="@+id/ed_verify_number2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_verify_number2"
        style="@style/Verify_Code_Appearance"
        app:layout_constraintEnd_toStartOf="@+id/ed_verify_number3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ed_verify_number1" />

    <EditText
        android:id="@+id/ed_verify_number3"
        style="@style/Verify_Code_Appearance"
        app:layout_constraintEnd_toStartOf="@+id/ed_verify_number4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ed_verify_number2" />

    <EditText
        android:id="@+id/ed_verify_number4"
        style="@style/Verify_Code_Appearance"
        app:layout_constraintEnd_toStartOf="@+id/ed_verify_number5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ed_verify_number3" />

    <EditText
        android:id="@+id/ed_verify_number5"
        style="@style/Verify_Code_Appearance"
        app:layout_constraintEnd_toStartOf="@+id/ed_verify_number6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ed_verify_number4" />


    <EditText
        android:id="@+id/ed_verify_number6"
        style="@style/Verify_Code_Appearance"
        android:imeOptions="actionDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ed_verify_number5" />

</androidx.constraintlayout.widget.ConstraintLayout>